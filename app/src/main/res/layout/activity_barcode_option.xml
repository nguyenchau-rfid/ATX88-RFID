<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.atid.app.atx.activity.RfidOptionActivity" >
    
    <TextView 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:text="@string/option_group_barcode"
	    android:textSize="18sp"
	    android:textStyle="bold"
	    android:textColor="@color/white"
	    android:padding="5dp"
	    android:background="@color/option_group_background_color" />
    
    <ScrollView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="UselessParent">
	    
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical">

		    <LinearLayout android:id="@+id/linear_barcode_symbol_state"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal"
		        android:background="@drawable/textview_background_selector"
		        android:padding="8dp">
		
		        <TextView android:id="@+id/name_barcode_symbol_state"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:text="@string/symbol_state"
			        android:textSize="17sp" />
		        
	        </LinearLayout>
	
			<View android:layout_width="match_parent" android:layout_height="1dp" android:background="@color/lightgrey" />
		    	    
		    <!-- Postal Codes -->
		    <LinearLayout android:id="@+id/linear_postal_codes"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:orientation="vertical"
		        android:background="@drawable/textview_background_selector"
		        android:padding="8dp"
		        android:visibility="gone">
		    
		        <TextView 
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:gravity="start"
		            android:text="@string/postal_codes"
		            android:textSize="17sp"/>
		        
		        <TextView android:id="@+id/postal_codes"
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:gravity="end"
		            android:textSize="17sp"/>
		    </LinearLayout>
		    
			<View android:layout_width="match_parent" android:layout_height="1dp" android:background="@color/lightgrey" />
		    	    
			<LinearLayout android:id="@+id/linear_barcode_option"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:orientation="horizontal"
			    android:background="@drawable/textview_background_selector"
			    android:padding="8dp">
			    
			    <TextView android:id="@+id/name_barcode_option"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:text="@string/symbol_barcode_option"
			        android:textSize="17sp"/>
			    
			</LinearLayout>
			    
			<View android:layout_width="match_parent" android:layout_height="1dp" android:background="@color/lightgrey"/>
			
		    <LinearLayout android:id="@+id/linear_barcode_symbol_all_enable"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal"
		        android:background="@drawable/textview_background_selector"
		        android:padding="8dp">
		
		       	<TextView android:id="@+id/name_barcode_symbol_all_enable"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:text="@string/symbol_all_enable"
			        android:textSize="17sp" />
		        	        
	        </LinearLayout>
	
			<View android:layout_width="match_parent" android:layout_height="1dp" android:background="@color/lightgrey" />
		    	    	    	    
		    <LinearLayout android:id="@+id/linear_barcode_symbol_all_disable"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal"
		        android:background="@drawable/textview_background_selector"
		        android:padding="8dp">
		
		       	<TextView android:id="@+id/name_barcode_symbol_all_disable"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:text="@string/symbol_all_disable"
			        android:textSize="17sp" />
		       	
	        </LinearLayout>
	
			<View android:layout_width="match_parent" android:layout_height="1dp" android:background="@color/lightgrey" />
		    	    
		    <LinearLayout android:id="@+id/linear_barcode_symbol_default"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal"
		        android:background="@drawable/textview_background_selector"
		        android:padding="8dp">
		       	
		       	<TextView android:id="@+id/name_barcode_symbol_default"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:text="@string/symbol_default"
			        android:textSize="17sp" />
																						
	        </LinearLayout>
	
			<View android:layout_width="match_parent" android:layout_height="1dp" android:background="@color/lightgrey" />
		    	    	    
		    <LinearLayout android:id="@+id/linear_barcode_symbol_character_set"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal"
		        android:background="@drawable/textview_background_selector"
		        android:padding="8dp">
		
		       	<TextView android:id="@+id/name_barcode_symbol_character_set"
			        android:layout_width="0dp"
			        android:layout_height="wrap_content"
			        android:layout_weight="1"
			        android:gravity="start"
			        android:text="@string/symbol_character_set"
			        android:textSize="17sp" />
	       		        
			    <TextView android:id="@+id/value_barcode_symbol_character_set"
			        android:layout_width="0dp"
			        android:layout_height="wrap_content"
			        android:layout_weight="1"
			        android:gravity="end"
			        android:textSize="17sp" />		    
		       		       	
	        </LinearLayout>
		    
			<View android:layout_width="match_parent" android:layout_height="1dp" android:background="@color/lightgrey" />
		    	    
		    <!-- restart time -->
		    <LinearLayout android:id="@+id/linear_barcode_symbol_restart_time"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal"
		        android:background="@drawable/textview_background_selector"
		        android:padding="8dp">
		    
		        <TextView android:id="@+id/name_barcode_symbol_restart_time"
		            android:layout_width="0dp"
		            android:layout_height="wrap_content"
			        android:layout_weight="1"
		            android:gravity="start"
		            android:text="@string/restart_time"
		            android:textSize="17sp"/>
		        
		        <TextView android:id="@+id/value_barcode_symbol_restart_time"
		            android:layout_width="0dp"
		            android:layout_height="wrap_content"
			        android:layout_weight="1"
		            android:gravity="end"
		            android:textSize="17sp"/>
		    </LinearLayout>
		    		    
			<View android:layout_width="match_parent" android:layout_height="1dp" android:background="@color/lightgrey" />
	                
		</LinearLayout>
	        
    </ScrollView>
		
</LinearLayout>

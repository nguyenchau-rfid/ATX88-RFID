<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >
    
	<ScrollView
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    tools:ignore="UselessParent">
	    
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical">
	    
	        <!-- Code 32 Prefix -->
	        <LinearLayout
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:orientation="horizontal">
	            
	            <CheckBox android:id="@+id/code32_prefix"
	                android:layout_width="match_parent"
	                style="@style/caption_textview"
	                android:text="@string/code32_prefix"/>
	            
	        </LinearLayout>
	        
	        <!-- Set Lengths for Code 39 -->
	        <LinearLayout android:id="@+id/linear_length_type"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:orientation="vertical">
	            
	            <TextView 
	                style="@style/option_caption_vertical_textview"
	                android:text="@string/length_type"/>
	            
	            <View style="@style/vertical_split_5dp"/>
	            
	            <TextView android:id="@+id/length_type"
	                style="@style/option_value_vertical_textview"/>
	        
		    </LinearLayout>

	        <!-- Length 1 -->
	        <LinearLayout android:id="@+id/linear_length1"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:orientation="horizontal">
	            
	            <TextView 
	                style="@style/option_caption_textview"
	                android:text="@string/length1"/>
	            
	            <View style="@style/horizontal_split_5dp"/>
	            
	            <TextView android:id="@+id/length1"
	                style="@style/option_value_textview"
	                android:layout_weight="1"
					tools:ignore="InefficientWeight"/>
	            
	        </LinearLayout>
	        
	        <!-- Length 2 -->
	        <LinearLayout android:id="@+id/linear_length2"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:orientation="horizontal">
	            
	            <TextView 
	                style="@style/option_caption_textview"
	                android:text="@string/length2"/>
	            
	            <View style="@style/horizontal_split_5dp"/>
	            
	            <TextView android:id="@+id/length2"
	                style="@style/option_value_textview"
	                android:layout_weight="1"
					tools:ignore="InefficientWeight"/>
	            
	        </LinearLayout>
	        	        	        
	        <!-- Code 39 Check Digit Verification -->
	        <LinearLayout 
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:orientation="horizontal">
	            
	            <CheckBox android:id="@+id/code39_check_digit_verification"
	                android:layout_width="wrap_content"
	                style="@style/caption_textview"
	                android:text="@string/code39_check_digit_verification"/>
	            
	        </LinearLayout>
	        
	        <!-- Transmit Code 39 Check Digit -->
	        <LinearLayout 
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:orientation="horizontal">
	            
	            <CheckBox android:id="@+id/transmit_code39_check_digit"
	                android:layout_width="match_parent"
	                style="@style/caption_textview"
	                android:text="@string/transmit_code39_check_digit"/>
	            
	        </LinearLayout>
	        	        
	        <!-- Code 39 Full ASCII Conversion -->
	        <LinearLayout 
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:orientation="horizontal">
	            
	            <CheckBox android:id="@+id/code39_full_ascii_conversion"
	                android:layout_width="wrap_content"
	                style="@style/caption_textview"
	                android:text="@string/code39_full_ascii_conversion"/>
	            
	        </LinearLayout>
	        
	    </LinearLayout>
	    
	</ScrollView>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >
    
    <LinearLayout 
        style="@style/horizontal_layout">
        
        <TextView 
            style="@style/option_caption_textview"
            android:text="@string/select_flag"/>
        
        <View style="@style/horizontal_split_5dp"/>
        
        <TextView android:id="@+id/select_flag"
            style="@style/option_value_textview"
            android:layout_weight="1.5"
            tools:ignore="inefficientWeight"/>
        
    </LinearLayout>
    
    <LinearLayout
        style="@style/horizontal_layout">
        
        <TextView
            style="@style/option_caption_textview"
            android:text="@string/session_target"/>
        
        <View style="@style/horizontal_split_5dp" />
        
        <TextView android:id="@+id/session_target"
            style="@style/option_value_textview"
            android:layout_weight="1.5"
            tools:ignore="InefficientWeight"/>
        
    </LinearLayout>

    <LinearLayout
        style="@style/horizontal_layout">
        
        <TextView
            style="@style/option_caption_textview"
            android:text="@string/session_flag"/>
        
        <View style="@style/horizontal_split_5dp"/>
        
        <TextView android:id="@+id/session_flag"
            style="@style/option_value_textview"
            android:layout_weight="1.5"
            tools:ignore="InefficientWeight"/>
        
    </LinearLayout>
</LinearLayout>

	            android:padding="16dp">
	            
	            <TextView 
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:text="@string/d2of5"
	                android:textSize="17sp"/>
	        </LinearLayout>
	        	        
	        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@color/lightgrey"/>
	        
	        <LinearLayout android:id="@+id/linear_barcode_option_matrix2of5"
	            android:layout_width="match_parent"

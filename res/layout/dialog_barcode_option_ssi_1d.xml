	        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@color/lightgrey"/>
	        	        
	        <LinearLayout android:id="@+id/linear_barcode_option_code93"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"

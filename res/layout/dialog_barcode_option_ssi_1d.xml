	            <TextView 
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:text="@string/code11"
	                android:textSize="17sp"/>
	        </LinearLayout>
	        	        
	        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@color/lightgrey"/>
	        
	        <LinearLayout android:id="@+id/linear_barcode_option_i2of5"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:orientation="horizontal"
	            android:background="@drawable/textview_background_selector"
	            android:padding="16dp">
	            
	            <TextView 
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:text="@string/i2of5"
	                android:textSize="17sp"/>
	        </LinearLayout>
	        	        
	        <View android:layout_width="match_parent" android:layout_height="1dp" android:background="@color/lightgrey"/>
	        

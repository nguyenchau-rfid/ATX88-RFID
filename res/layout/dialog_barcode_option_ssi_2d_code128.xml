<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >
    
	<ScrollView
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    tools:ignore="UselessParent">
	    
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical">
	    
	        <!-- Set Lengths for Code 128 -->
	        <LinearLayout android:id="@+id/linear_length_type"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:orientation="vertical">
	            
	            <TextView 
	                style="@style/option_caption_vertical_textview"
	                android:text="@string/length_type"/>
	            
	            <View style="@style/vertical_split_5dp"/>
	            
	            <TextView android:id="@+id/length_type"
	                style="@style/option_value_vertical_textview"/>
	            
	        </LinearLayout>
	        
	        <!-- Length 1 -->	        
	        <LinearLayout android:id="@+id/linear_length1"
	        	android:layout_width="match_parent"
	        	android:layout_height="wrap_content"
	        	android:orientation="horizontal">
	            
	            <TextView 
	                style="@style/option_caption_textview"
	                android:text="@string/length1"/>
	            
	            <View style="@style/horizontal_split_5dp"/>
	            
	            <TextView android:id="@+id/length1"
	                style="@style/option_value_textview"
	                android:layout_weight="1"
					tools:ignore="InefficientWeight"/>
	            
	        </LinearLayout>
	        
	        <!-- Length 2 -->	        
	        <LinearLayout android:id="@+id/linear_length2"
	        	android:layout_width="match_parent"
	        	android:layout_height="wrap_content"
	        	android:orientation="horizontal">
	            
	            <TextView 
	                style="@style/option_caption_textview"
	                android:text="@string/length2"/>
	            
	            <View style="@style/horizontal_split_5dp"/>
	            
	            <TextView android:id="@+id/length2"
	                style="@style/option_value_textview"
	                android:layout_weight="1"
					tools:ignore="InefficientWeight"/>
	            
	        </LinearLayout>
	        	        
	        <!-- ISBT Concatenation -->	        
	        <LinearLayout 
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:orientation="vertical">
	            
	            <TextView 
	                style="@style/option_caption_vertical_textview"
	                android:text="@string/isbt_concatenation"/>
	            
	            <View style="@style/vertical_split_5dp"/>
	            
	            <TextView android:id="@+id/isbt_concatenation"
	                style="@style/option_value_vertical_textview"/>
	            
	        </LinearLayout>
	        
	        <!-- Check ISBT Table -->	        
	        <LinearLayout 
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:orientation="horizontal">
	            
	            <CheckBox android:id="@+id/check_isbt_table"
	                android:layout_width="wrap_content"
	                style="@style/caption_textview"
	                android:text="@string/check_isbt_table"/>
	            
	        </LinearLayout>
	        
	        <!-- ISBT Concatenation Redundancy -->	        
	        <LinearLayout 
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:orientation="vertical">
	            
	            <TextView 
	                style="@style/option_caption_vertical_textview"
	                android:text="@string/isbt_concatenation_redundancy"/>
	            
	            <View style="@style/vertical_split_5dp"/>
	            
	            <TextView android:id="@+id/isbt_concatenation_redundancy"
	                style="@style/option_value_vertical_textview"/>
	            
	        </LinearLayout>
	        
	        <!-- Code 128 Reduced Quiet Zone -->	        
	        <LinearLayout 
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:orientation="horizontal">
	        
	            <CheckBox android:id="@+id/code128_reduced_quiet_zone"
	                android:layout_width="wrap_content"
	                style="@style/caption_textview"
	                android:text="@string/code128_reduced_quiet_zone"/>
	            
	        </LinearLayout>
	        
	        <!-- Ignore Code 128 <FNC4> -->	        
	        <LinearLayout 
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:orientation="horizontal">
	        
	            <CheckBox android:id="@+id/ignore_code128_fnc4"
	                android:layout_width="wrap_content"
	                style="@style/caption_textview"
	                android:text="@string/ignore_code128_fnc4"/>
	            
	        </LinearLayout>	        

            	        
	    </LinearLayout>
	    
	</ScrollView>
</LinearLayout>

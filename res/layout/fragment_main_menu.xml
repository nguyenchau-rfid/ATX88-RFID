<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.atid.app.atx.activity.fragment.MainMenuFragment" >

    <!-- Firmware Version -->
	<TextView style="@style/menu_caption_textview"
	    android:text="@string/firmware_version" />
	
	<TextView android:id="@+id/firmware_version"
	    style="@style/menu_value_textview"
	    android:text="test-1.0.0.27"
	    tools:ignore="HardcodedText" />
	
	<View style="@style/vertical_split_5dp" />

    <!-- Device Name -->
	<TextView style="@style/menu_caption_textview"
	    android:text="@string/device_name" />
	
	<TextView android:id="@+id/device_name"
	    style="@style/menu_value_textview"
	    android:text="AT388-db77"
	    tools:ignore="HardcodedText" />
	
	<View style="@style/vertical_split_5dp" />

    <!-- Device Address -->
	<TextView style="@style/menu_caption_textview"
	    android:text="@string/device_address" />
	
	<TextView android:id="@+id/device_address"
	    style="@style/menu_value_textview"
	    android:text="XX:XX:XX:XX:XX:XX"
	    tools:ignore="HardcodedText" />
	
	<View style="@style/vertical_split_10dp" />
	
	<!-- Menu ListView -->
	<ListView android:id="@+id/menu_list"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:choiceMode="singleChoice"/>
		
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >
    
	<ScrollView
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    tools:ignore="UselessParent">
	    
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical">
	    
   	        <!-- Transmit US Postal Check Digit -->
	        <LinearLayout
	        	android:layout_width="match_parent"
	        	android:layout_height="wrap_content"
	        	android:orientation="horizontal">
	        
	        	<CheckBox android:id="@+id/transmit_us_postal_check_digit"
	        	    android:layout_width="wrap_content"
	        	    style="@style/caption_textview"
	        	    android:text="@string/transmit_us_postal_check_digit"/>
	        	    
			</LinearLayout>	 
				        	        
   	        <!-- Transmit UK Postal Check Digit -->
	        <LinearLayout
	        	android:layout_width="match_parent"
	        	android:layout_height="wrap_content"
	        	android:orientation="horizontal">
	        
	        	<CheckBox android:id="@+id/transmit_uk_postal_check_digit"
	        	    android:layout_width="wrap_content"
	        	    style="@style/caption_textview"
	        	    android:text="@string/transmit_uk_postal_check_digit"/>
	        	    
			</LinearLayout>	 
	        
   	        <!-- Australia Post Format -->
	        <LinearLayout
	        	android:layout_width="match_parent"
	        	android:layout_height="wrap_content"
	        	android:orientation="vertical">
	        
	            <TextView 
	                style="@style/option_caption_vertical_textview"
	                android:text="@string/australia_post_format"/>
	            
	            <View style="@style/vertical_split_5dp"/>
	            
	            <TextView android:id="@+id/australia_post_format"
	                style="@style/option_value_vertical_textview"
	                android:layout_weight="1"
					tools:ignore="InefficientWeight"/>
	            
			</LinearLayout>	 
	        	        
	    </LinearLayout>
	    
	</ScrollView>
</LinearLayout>
